<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cnsl_HomeActivity_GamesList_Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_outline"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_HomeActivity_GamesList_GamePic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_HomeActivity_GamesList_GameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="0.7"
            android:shadowDy="0.7"
            android:shadowRadius="1"
            app:layout_constraintBottom_toTopOf="@+id/tv_HomeActivity_GamesList_Nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_HomeActivity_GamesList_GamePic"/>

        <TextView
            android:id="@+id/tv_HomeActivity_GamesList_Nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_HomeActivity_GamesList_AddFriends"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_HomeActivity_GamesList_AddFriends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:text="@string/home_addfriends"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.33"/>

        <Button
            android:id="@+id/btn_HomeActivity_GamesList_LetsPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:text="@string/home_letsplay"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_HomeActivity_GamesList_DeleteGame"
            app:layout_constraintStart_toEndOf="@+id/btn_HomeActivity_GamesList_AddFriends"
            app:layout_constraintWidth_percent="0.33"/>

        <Button
            android:id="@+id/btn_HomeActivity_GamesList_DeleteGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:text="@string/home_deletegame"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_HomeActivity_GamesList_GamePic"
            app:layout_constraintWidth_percent="0.33"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>